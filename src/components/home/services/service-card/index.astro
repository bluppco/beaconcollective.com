---

// IMPORT ATOMS
import Heading5LgMediumWhite from "@/atoms-diksha/headings/five/lg/medium/white/index.astro"
import ParagraphExtralightWhite from "@/atoms-diksha/paragraphs/extralight/white/index.astro"

//GET ASTRO PROPS
const { 
    image_source,
    title,
    description,
} = Astro.props

---

<div class="p-6 flex-none flex flex-col items-start gap-2 bg-[#4f78a7] lg:bg-color-primary rounded-xl">
    <img src={ image_source } alt={ title } class="h-20">
    <Heading5LgMediumWhite>{ title }</Heading5LgMediumWhite>
    <div class="w-64">
        <ParagraphExtralightWhite>{ description }</ParagraphExtralightWhite>
    </div>
</div>

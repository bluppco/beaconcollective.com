---

// IMPORT ASTRO ATOMS
import HeadingFiveLgMediumWhite from "@/atoms-diksha/headings/five/lg/medium/white/index.astro"
import ParagraphExtralightWhite from "@/atoms-diksha/paragraphs/extralight/white/index.astro"
import Picture from "@/atoms/picture/internal/index.astro"

//GET ASTRO PROPS
const { 

    description,
    image_source,
    title,
    
} = Astro.props

---

<div class="p-6 flex-none flex flex-col items-start gap-2 bg-color-tertiary lg:bg-color-primary rounded-xl">
    <div class="h-20 aspect-square">
        <Picture 
            alternative_text={ title }
            source={ image_source } 
        />
    </div>
    <HeadingFiveLgMediumWhite>{ title }</HeadingFiveLgMediumWhite>
    <div class="w-80 lg:w-64">
        <ParagraphExtralightWhite>{ description }</ParagraphExtralightWhite>
    </div>
</div>
